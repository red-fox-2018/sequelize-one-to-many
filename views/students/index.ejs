<!DOCTYPE html>
<html>

<head>
  <% include ../partials/head %>
</head>

<body>
  <div class="container">
    <% include ../partials/header %>
      <h2>
        Students
        <a href="/students/add" class="btn btn-primary pull-right">Add Student</a>
      </h2>
      <hr>
      <% if (students.length) { %>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>No.</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Gender</th>
              <th>Birthday</th>
              <th>Email</th>
              <th>Phone</th>
              <th class="text-right">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% students.forEach((student, index) => { %>
              <tr>
                <td>
                  <%= index + 1 %>
                </td>
                <td>
                  <%= student.first_name %>
                </td>
                <td>
                  <%= student.last_name %>
                </td>
                <td>
                  <%= student.gender %>
                </td>
                <td>
                  <%= student.birthday %>
                </td>
                <td>
                  <%= student.email %>
                </td>
                <td>
                  <%= student.phone %>
                </td>
                <td class="text-right">
                  <a href="/students/<%= student.id %>/edit" class="btn btn-sm btn-warning">Edit</a>
                  <a href="/students/<%= student.id %>/delete" class="btn btn-sm btn-danger">Delete</a>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
        <% } else { %>
          <p class="text-muted text-center">No data...</p>
          <% } %>
  </div>
</body>

<footer>
  <% include ../partials/footer %>
</footer>

</html>
