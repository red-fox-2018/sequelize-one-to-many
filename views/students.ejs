<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Student's Page</title>
  </head>
  <body>
    <h1>Students Data</h1>
    <h3><a href="/student/add">add student</a></h3>
    <table style="width:80%" border="1">
      <tr>
        <th>No.</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Options</th>
      </tr>
      <% for(let i in studentData) { %>
      <tr>
        <td><%= studentData[i].id %></td>
        <td><%= studentData[i].first_name %></td>
        <td><%= studentData[i].last_name %></td>
        <td><%= studentData[i].email %></td>
        <td><a href=" /student/edit/<%= studentData[i].id %>">Edit</a> | <a href="/student/delete/<%= studentData[i].id %>" onclick="return confirm('Delete this student?')"> Delete </a></td>
      </tr>
      <% } %>
    </table>
    <p><a href="/">Back</a></p>
  </body>
</html>
