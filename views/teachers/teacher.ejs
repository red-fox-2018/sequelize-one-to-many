<%- include('../partials/header.ejs') %>
<div>
  <h1 class="text-center">All Teachers Data</h1>
  <h5 class="text-center"><a href="/">Homepage</a></h5>
  <h5 class="text-center"><a href="/teachers/add">Add Teacher</a></h5>
  <table class="table">
    <tr>
      <th>Id</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Subject</th>
      <th>Action</th>
    </tr>
    <% teachers.forEach(teacher => { %>
      <tr>
        <td><%=teacher.id%></td>
        <td><%=teacher.first_name%></td>
        <td><%=teacher.last_name%></td>
        <td><%=teacher.email%></td>
        <td><%= teacher_helper(teacher.Subject) %></td>
        <td>
        <a href="teachers/edit/<%= teacher.id %>" class="btn btn-primary">Edit</a>
        <a href="teachers/delete/<%= teacher.id %>" class="btn btn-danger" onclick="return confirm('delete this teacher?')">Delete</a>
        </td>
      </tr>
    <% }) %>

  </table>
</div>

<%- include('../partials/footer.ejs') %>