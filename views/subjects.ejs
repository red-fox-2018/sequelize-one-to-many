<!DOCTYPE html>
<html>

<head>
    <title>Teachers</title>
</head>

<style>
    body{
        text-align: center;
        margin: auto;
    }
    table{
        margin:auto;
    }
</style>

<body>
    <h1>All Teachers Data</h1>
    <p><a href="/subjects/addTeacher">Add Teachers Data</a></p>

    <table border=1>
        <tr>
            <th>id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Subject</th>
            <th>Options</th>
        </tr>
        <% let teacher = teachers.sort(function(a,b){ return a.id-b.id }) %>
        <%   for(let i=0;i<teacher.length;i++){%>

            <tr>
                    <td>
                        <%=  teacher[i].id  %>
                    </td>
                    <td>
                        <%=  teacher[i].first_name  %>
                    </td>
                    <td>
                        <%=  teacher[i].last_name  %>
                    </td>
                    <td>
                        <%=  teacher[i].email  %>
                    </td>
                    <%  if(teacher[i].Subject ==null){ %>
                          <td>unassigned</td>
                    <% }else{ %>
                        <td>
                            <%=  teacher[i].Subject.name  %>
                        </td>
                    <% } %>
                <td>
                    <p>
                        <a href="">Edit</a> |
                        <a href="">Delete</a>
                    </p>
                </td>
            </tr>
            <% } %>

    </table>
</body>

</html>